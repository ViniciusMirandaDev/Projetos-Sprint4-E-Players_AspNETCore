@model Noticias
@{
    ViewData["Title"] = "Noticias";
}

<div class="titulo_pagina">
    <h1>cadastro de @ViewData["Title"]</h1>
</div>

<form class="cadastro" method="POST" action='@Url.Action("Cadastrar")' enctype="multipart/form-data">

    <div class="campo">

    <label for="IdNoticia">IdNotícia</label>
    <input type="text" name="IdNoticia" id="IdNoticia">
    </div>
    
    <div class="campo">

    <label for="Titulo">Título</label>
    <input type="text" name="Titulo" id="Titulo">
    </div>
    
    <div class="campo">

    <label for="Texto">Texto</label>
    <textarea name="Texto" id="Texto" cols="32.5" rows="10"></textarea>
    </div>

    <div class="campo">

    <label for="Imagem">Imagem</label>
    <input type="file" name="Imagem" id="Imagem">
    </div>

    <button class="gradient btn" type="submit">Cadastrar</button>

</form>
<table class="table table-responsive table-striped">
    <thead>
        <th>Id</th>
        <th>Titulo</th>
        <th>Texto</th>
        <th>Imagem</th>
    </thead>
    <tbody>
        @foreach (Noticias n in ViewBag.Noticias)
        {
            <tr>
                <td>@n.IdNoticia</td>
                <td>@n.Titulo</td>
                <td>@n.Texto</td>
                <td><img src="img/Noticias/@n.Imagem" alt="Imagem da notícia @n.Titulo" width="40"></td>
                <td><a asp-area="" asp-controller="Noticias" asp-action="Excluir" asp-route-id="@n.IdNoticia">
                    <i class="fa fa-trash"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
